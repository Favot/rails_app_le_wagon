
<div class="container-fluid">
  <div class="row">
    <div class="col-md-6">
      <h3>
        <%= "About #{@cocktail.name}" %>
      </h3>
      <p>
       
        <% @cocktail.doses.each do |dose|%>
        <ul>
          <li>
            <%= dose.description %>
            <%= dose.ingredient.name %>
          </li>
        </ul>


        <% end %>
        <div>
          <%= link_to 'Go to Index', cocktails_path, class: "btn btn-primary"%>
          <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail), class: "btn btn-info" %>
          <%= link_to 'Delete', cocktail_path(@cocktail), method: :delete, class: "btn btn-danger" %>
        </div>
      </p>
    </div>
    

  </div>
</div>
